{
  "name": "mountview-hotel-skardu",
  "version": "1.0.0",
  "private": true,
  "description": "Mount View Hotel Skardu - Full Stack Hotel Management System",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:frontend": "cd frontend && yarn install",
    "install:backend": "cd backend && yarn install",
    "install:all": "yarn install:frontend && yarn install:backend",
    "build:frontend": "cd frontend && yarn build",
    "build": "yarn build:frontend",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:backend": "cd backend && yarn dev",
    "start:frontend": "cd frontend && yarn start",
    "start:backend": "cd backend && yarn start"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mountview-hotel.git"
  },
  "keywords": [
    "hotel",
    "management",
    "skardu",
    "booking",
    "pos"
  ],
  "author": "Mount View Hotel Skardu",
  "license": "MIT"
}
